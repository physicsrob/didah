{
  "name": "morseacademy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev --port 3000 --proxy 5173 -- vite",
    "dev:vite": "vite",
    "build": "tsc -b && vite build",
    "deploy": "npm run build && wrangler pages deploy ./dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc -b --noEmit",
    "check": "npm run typecheck && npm run lint && npm run test -- --run",
    "check:fix": "npm run typecheck && npm run lint -- --fix && npm run test -- --run",
    "precommit": "npm run check",
    "morse-sim": "tsx src/cli/morse-sim.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@tsndr/cloudflare-worker-jwt": "^3.2.0",
    "@types/google-one-tap": "^1.2.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "tsx": "^4.20.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  }
}
